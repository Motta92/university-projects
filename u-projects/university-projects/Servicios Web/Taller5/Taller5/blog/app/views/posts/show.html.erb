<p id="notice"><%= notice %></p>

<p>
  <strong>Tittle:</strong>
  <%= @post.tittle %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Comments</h2>
<div id="comments">
	<!-- Se ajusta para que traiga los posts -->
	<% @post.comments.each do |comment| %>
		<%=div_for comment do %>
			<p>
				<strong> Posted
					<%=time_ago_in_words(comment.created_at) %>
				</strong><br/>
				<%=h(comment.body) %>
			</p>
		<% end %>
	<% end %>
</div>

<%= form_for([@post, Comment.new]) do |f| %>
	<div class="field">
		<p><%= f.label :body, "New Comment" %><br/>
		   <%= f.text_area :body %>
		</p>
	</div>
	<div class="actions">
			<p><%= f.submit "Add comment" %>
			</p>
	</div>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
